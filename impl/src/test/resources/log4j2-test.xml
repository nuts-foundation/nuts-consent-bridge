<Configuration status="info">
    <Appenders>
        <Console name="Console-Appender" target="SYSTEM_OUT">
            <PatternLayout>
                <pattern>
                    [%-5level] %d{HH:mm:ss.SSS} [%t] %logger{36} - %msg%n
                </pattern>>
            </PatternLayout>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="Console-Appender"/>
        </Root>
        <Logger name="net.corda" level="warn" additivity="false">
            <AppenderRef ref="Console-Appender"/>
        </Logger>
        <Logger name="net.corda.testing" level="info" additivity="false">
            <AppenderRef ref="Console-Appender"/>
        </Logger>
        <Logger name="org.hibernate" level="error" additivity="false">
            <AppenderRef ref="Console-Appender"/>
        </Logger>
        <Logger name="liquibase" level="warn" additivity="false">
            <AppenderRef ref="Console-Appender"/>
        </Logger>
        <Logger name="org.apache" level="error" additivity="false">
            <AppenderRef ref="Console-Appender"/>
        </Logger>
        <Logger name="com.zaxxer.hikari" level="error" additivity="false">
            <AppenderRef ref="Console-Appender"/>
        </Logger>
        <Logger name="org.eclipse.jetty" level="error" additivity="false">
            <AppenderRef ref="Console-Appender"/>
        </Logger>
        <Logger name="org.springframework" level="info" additivity="false">
            <AppenderRef ref="Console-Appender"/>
        </Logger>
        <Logger name="io.netty" level="error" additivity="false">
            <AppenderRef ref="Console-Appender"/>
        </Logger>
        <Logger name="co.paralleluniverse" level="fatal" additivity="false">
            <AppenderRef ref="Console-Appender"/>
        </Logger>
    </Loggers>
</Configuration>
